@model GoGiftWebsite.Areas.gpanel.Models.TblVendors;

@{
    ViewBag.Title = "Vendor List";
}

@section Header {

    @*   <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"> *@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-2.1.4/datatables.min.css">
}

@section PageHeaderName {
    <h2>Vendor List</h2>
}
@section PageBreadcum {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active">Vendor</li>
    </ol>
}
<div class="form-horizontal">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Vendor</button><br /><br />
    <table id="Vendortable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    VendorID
                </th>
                <th>
                    VendorName
                </th>
                <th>
                    MobileNo
                </th>

                <th>
                    City
                </th>

                <th>
                    EmailID
                </th>
                <th>
                    CreatedDate
                </th>

                <th>
                    IsActive
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Vendor</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="row">
                        <!-- Vendor Details Column 1 -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="VendorID">Vendor ID</label>
                                <input asp-for="VendorID" class="form-control" placeholder="VendorID" disabled="disabled" />
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="VendorName">Vendor Name</label>
                                <input asp-for="VendorName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyName"> </label>
                                <input asp-for="CompanyName" class="form-control">
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="MobileNo">MobileNo</label>
                                <input asp-for="MobileNo" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control">
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="State">State</label>
                                <input asp-for="State" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="Country"></label>
                                <input asp-for="Country" class="form-control" value="India">
                            </div>
                            <div class="form-group">
                                <label asp-for="AccountName"></label>
                                <input asp-for="AccountName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="BankName"></label>
                                <input asp-for="BankName" class="form-control">
                            </div>
                        </div>

                        <!-- Vendor Details Column 2 -->
                        <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CCEmailID"></label>
                            <input asp-for="CCEmailID" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="VendorDisplayName"></label>
                            <input asp-for="VendorDisplayName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactPerson"></label>
                            <input asp-for="ContactPerson" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="AlternateNo"></label>
                            <input asp-for="AlternateNo" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="City">City</label>
                            <input asp-for="City" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Pincode"></label>
                            <input asp-for="Pincode" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Priority"></label>
                            <input asp-for="Priority" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountNo"></label>
                            <input asp-for="AccountNo" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Branch"></label>
                            <input asp-for="Branch" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="IFSCCode"></label>
                            <input asp-for="IFSCCode" class="form-control">
                        </div>
                            
                        </div>

                    </div>
                    <!-- Bank Details Section -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Login Details</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="EmailID">Email ID</label>
                                        <input id="EmailID" type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="Password">Password</label>
                                        <div class="input-group">
                                            <input id="Password" type="text" class="form-control" placeholder="Password">
                                            <div class="input-group-append" id="show_hide_password">
                                                <div class="input-group-text">
                                                    <a href="javascript:showPassword()"><i id="iTag" class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group" id="ResetPassword">
                                        <button type="button" class="btn btn-primary" id="btnResetPassword" onclick="return ResetPassword();">Reset Password</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Footer {
    <script src="/gpanel/Content/script/Vendor.js"></script>
    <!-- InputMask -->
    <script src="/gpanel/Content/plugins/moment/moment.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="/gpanel/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>

    @*  <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script> *@
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/v/dt/dt-2.1.4/datatables.min.js"></script>
}

