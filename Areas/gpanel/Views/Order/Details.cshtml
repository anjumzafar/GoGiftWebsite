@model GoGiftWebsite.Areas.gpanel.Models.TblOrders;

@{
    ViewBag.Title = "Order Details";
}

@section Header {

    @*   <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"> *@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-2.1.4/datatables.min.css">

}

@section PageHeaderName {
    <h2>Order Details</h2>
}
@section PageBreadcum {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active">Order</li>
    </ol>
}
<div class="row">
    <!-- Customer Details Column 1 -->
    <div class="col-md-6">
        <div class="form-row form-row-custom">
            <div class="form-group col-md-4">
                <label asp-for="CustomerID">Customer ID</label>
                <input asp-for="CustomerID" class="form-control form-control-custom" >
            </div>
            <div class="form-group col-md-8">
                <label asp-for="CustomerName">Customer Name</label>
                <input asp-for="CustomerName" class="form-control form-control-custom">
            </div>
        </div>
        <div class="form-row form-row-custom">
            <div class="form-group col-md-4">
                <label asp-for="STDCode">STD Code</label>
                <input asp-for="STDCode" class="form-control form-control-custom" >
            </div>
            <div class="form-group col-md-8">
                <label asp-for="MobileNo">Mobile No</label>
                <input asp-for="MobileNo" class="form-control form-control-custom">
            </div>
        </div>
        <div class="form-group form-row-custom">
            <label asp-for="EmailID">Email ID</label>
            <input asp-for="EmailID" class="form-control form-control-custom" placeholder="Enter email ID">
        </div>
        <div class="form-row form-row-custom">
            <div class="form-group col-md-6">
                <label asp-for="CreatedOn">Order Date</label>
                <input asp-for="CreatedOn" class="form-control form-control-custom" placeholder="Order Date">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ReferCode">Refer Code</label>
                <input asp-for="ReferCode" class="form-control form-control-custom">
            </div>
        </div>
        <div class="form-group form-row-custom">
            <label asp-for="MessageOnCard">Message</label>
            <input asp-for="MessageOnCard" class="form-control form-control-custom" placeholder="Message On Card">
        </div>
    </div>

    <!-- Customer Details Column 2 -->
    <div class="col-md-6">
        <div class="form-group form-row-custom">
            <label asp-for="DeliveryName">Recipient Name</label>
            <input asp-for="DeliveryName" class="form-control form-control-custom" placeholder="Recipient Name">
        </div>
        <div class="form-group form-row-custom">
            <label asp-for="DeliveryAddress">Delivery Address</label>
            <input asp-for="DeliveryAddress" class="form-control form-control-custom" placeholder="Delivery Address">
        </div>
        <div class="form-row form-row-custom">
            <div class="form-group col-md-4">
                <label asp-for="DeliverySTDCode">STD Code</label>
                <input asp-for="DeliverySTDCode" class="form-control form-control-custom" maxlength="6" >
            </div>
            <div class="form-group col-md-8">
                <label asp-for="DeliveryMobileNo">Mobile No</label>
                <input asp-for="DeliveryMobileNo" class="form-control form-control-custom">
            </div>
        </div>
        <div class="form-row form-row-custom">
            <div class="form-group col-md-8">
                <label asp-for="DeliveryCity">Delivery City</label>
                <input asp-for="DeliveryCity" class="form-control form-control-custom" >
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DeliveryPincode">Delivery Pincode</label>
                <input asp-for="DeliveryPincode" class="form-control form-control-custom">
            </div>
        </div>
        <div class="form-row form-row-custom">
            <div class="form-group col-md-6">
                <label asp-for="DeliveryState">Delivery State</label>
                <input asp-for="DeliveryState" class="form-control form-control-custom" >
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DeliveryCountry">Delivery Country</label>
                <input asp-for="DeliveryCountry" class="form-control form-control-custom">
            </div>
        </div>
    </div>
</div>
